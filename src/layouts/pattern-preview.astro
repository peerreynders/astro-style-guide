		<meta http-equiv="X-UA-Compatible" content="ie=edge" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<style>
			body {
				padding: 1rem 1rem 5rem;
				min-height: unset;
				margin: 0;
			}
		</style>
